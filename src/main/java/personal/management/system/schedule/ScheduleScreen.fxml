<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="personal.management.system.schedule.ScheduleController">
    <HBox spacing="10">
        <DatePicker fx:id="dpDataAgendamento" promptText="Data"/>
        <TextField fx:id="txtValorAgendamento" promptText="Valor"/>
        <TextField fx:id="txtDescricaoAgendamento" promptText="Descrição"/>
        <CheckBox fx:id="cbPago" text="Pago"/>
        <Button text="Adicionar" onAction="#handleAddSchedule"/>
    </HBox>
    <TableView fx:id="tvAgendamentos">
        <!-- Colunas para data, valor, descrição, pago -->
    </TableView>
    <HBox spacing="10">
        <Button text="Editar" onAction="#handleEditSchedule"/>
        <Button text="Excluir" onAction="#handleDeleteSchedule"/>
        <Button text="Pagar" onAction="#handlePaySchedule"/>
    </HBox>
</VBox>