<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="personal.management.system.transaction.TransactionController">
    <HBox spacing="10">
        <ComboBox fx:id="cbTipoTransacao" promptText="Tipo"/>
        <TextField fx:id="txtValor" promptText="Valor"/>
        <DatePicker fx:id="dpData" promptText="Data"/>
        <TextField fx:id="txtDescricao" promptText="Descrição"/>
        <Button text="Adicionar" onAction="#handleAddTransaction"/>
    </HBox>
    <TableView fx:id="tvTransacoes">
        <!-- Colunas para valor, data, descrição, tipo (receita/despesa) -->
    </TableView>
    <HBox spacing="10">
        <Button text="Editar" onAction="#handleEditTransaction"/>
        <Button text="Excluir" onAction="#handleDeleteTransaction"/>
    </HBox>
</VBox>