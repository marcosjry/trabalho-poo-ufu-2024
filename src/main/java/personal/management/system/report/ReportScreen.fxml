<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="personal.management.system.report.ReportController">
    <PieChart fx:id="pcTransacoes" title="Receitas vs. Despesas"/>
    <BarChart fx:id="bcTransacoesMes" title="Transações por Mês">
        <xAxis><CategoryAxis label="Mês"/></xAxis>
        <yAxis><NumberAxis label="Valor"/></yAxis>
    </BarChart>
</VBox>